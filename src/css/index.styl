body,
html {
    font: 16px/1.4 Georgia, serif;
    background: #FFDEAD;
}

@media only screen and (max-width: 500px) {
    body,
    html {
        font-size: 14px;
    }    
}

h1 {
    color: #1E90FF;
}

.page {
    max-width: 400px;
    padding: 2rem;
    margin: 0 auto;
    text-align: center;
    user-select: none;
}

h1 {
    font: 2rem/1.2 Georgia, serif;
    margin-bottom: 1em;
}

.fifteen {
    width: 100%;
    padding-bottom: 100%
    background-color: #1E90FF;
    margin-bottom: 1.5rem;
    position: relative;

     .item {
        outline: none;
        position: absolute;
        left: 0;
        top: 0;
        width: 25%
        height: 25%;
        margin: 0;
        padding: 0;
        border: none;
        background-color: #fff;
        color: #1E90FF;
        font-size: 2rem;
        cursor: pointer;
        border: 1px solid #1E90FF;
        transition: transform 0.6s;

        &Val {
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px;
            width: 84%;
            height: 84%;
            margin: 8%;
            box-shadow: inset 0 0 0 2px #1E90FF;  
        }
    }

    &Won {
        .item {
            color: #fee600;
            filter: brightness(100%);
        }
    }
}

.button {
    color: #fff;
    background-color: #1E90FF;
    font: 1.2rem/1.4 Georgia, serif;
    border: none;
    cursor: pointer;
    padding: 0.5em 1.5em;

    &:hover {
        background-color: #7B68EE;
        transition: 0.5s linear;   
    }   
}
