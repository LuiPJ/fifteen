body,
html {
    font: 16px/1.4 Georgia, serif;
    background: #FFDEAD
}

.page {
    max-width: 400px;
    padding: 2rem;
    margin: 0 auto;
    text-align: center;
    user-select: none;
}

h1 {
    font: 2rem/1.2 Georgia, serif;
    margin-bottom: 1em;
}

.fifteen {
    width: 100%;
    padding-bottom: 100%
    background-color: #1E90FF;
    margin-bottom: 1.5rem;
    position: relative;

     .item {
        outline: none;
        position: absolute;
        left: 0;
        top: 0;
        width: 25%
        height: 25%;
        margin: 0;
        padding: 0;
        border: none;
        background-color: #fff;
        color: #1E90FF;
        font-size: 2rem;
        cursor: pointer;
        box-shadow: inset 1px 1px #e5d6f6;
        transition: transform 0.5s;

        &Val {
            display: flex;
            align-items: center;
            justify-content: center;
            border-radius: 10px
            width: 84%;
            height: 84%;
            margin: 8%;
            box-shadow: inset 0 0 0 2px #1E90FF;    
        }
    }

    &Won {
        .item {
        color: #32CD32;
        filter: brightness(400%)
        // box-shadow: inset 0 0 0 2px #32CD32;  
        }
        .fifteen {
         background-color: #32CD32;    
        }
    }
}

.button {
    color: #fff;
    background-color: #1E90FF;
    font: 1.2rem/1.4 Georgia, serif;
    border: none;
    cursor: pointer;
    padding: 0.5em 1.5em;

    &:hover {
        background-color: #7B68EE;
        transition: 1s linear;   
    }   
}
